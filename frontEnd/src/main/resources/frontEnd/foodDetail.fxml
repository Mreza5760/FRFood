    <ScrollPane fitToWidth="true"
                style="-fx-background: transparent; -fx-background-color: transparent;">
        <VBox fx:id="rateListContainer"
              spacing="25"
              alignment="TOP_CENTER"
              style="-fx-background-color: transparent; -fx-padding: 25;"
              prefWidth="850"/>
    </ScrollPane>
</VBox>