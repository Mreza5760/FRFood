        <VBox spacing="12" style="-fx-background-color: white; -fx-padding: 20 25; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 10, 0, 0, 4);">
            <TextField fx:id="fullNameField" promptText="ðŸ‘¤ Full Name"
