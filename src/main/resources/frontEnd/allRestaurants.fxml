<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.FRFood.frontEnd.controller.AllRestaurantsController"
            style="-fx-background-color: linear-gradient(to bottom, #f8fafc, #e5ebf3);"
            prefWidth="800" prefHeight="600">

    <top>
        <HBox spacing="15" alignment="CENTER_LEFT"
              style="-fx-padding: 15; -fx-background-color: #eef3f9; -fx-border-color: #ccd4e0; -fx-border-width: 0 0 1 0;">
            <Button fx:id="backButton" text="← Back"
                    style="-fx-background-color: #ff5555; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-background-radius: 8; -fx-pref-height: 38; -fx-font-size: 14px;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <TextField fx:id="minPrice" promptText="min"
                       style="-fx-background-radius: 8; -fx-padding: 8; -fx-pref-width: 30; -fx-font-size: 13px;"/>

            <TextField fx:id="maxPrice" promptText="max"
                       style="-fx-background-radius: 8; -fx-padding: 8; -fx-pref-width: 30; -fx-font-size: 13px;"/>

            <TextField fx:id="searchBox1" promptText="🔍 Search vendor/food name..."
                       style="-fx-background-radius: 8; -fx-padding: 8; -fx-pref-width: 200; -fx-font-size: 13px;"/>
            <TextField fx:id="searchBox2" promptText="🍽 Search food keywords..."
                       style="-fx-background-radius: 8; -fx-padding: 8; -fx-pref-width: 200; -fx-font-size: 13px;"/>

            <Button fx:id="searchInFood" text="searchInFood"
                    style="-fx-background-color: blue; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-background-radius: 8; -fx-pref-height: 38; -fx-font-size: 14px;"/>

            <Button fx:id="searchInRestaurant" text="searchInRestaurant"
                    style="-fx-background-color: blue; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-background-radius: 8; -fx-pref-height: 38; -fx-font-size: 14px;"/>

        </HBox>
    </top>
    <center>
        <VBox xmlns="http://javafx.com/javafx"
              xmlns:fx="http://javafx.com/fxml"
              alignment="TOP_CENTER" spacing="30"
              style="-fx-background-color: linear-gradient(to bottom, #eef3f9, #dbe5f1);">

            <Label text="🏬 enjoy ordering food from FRFood"
                   style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: #1e2a38;"/>

            <ScrollPane fitToWidth="true"
                        style="-fx-background: transparent; -fx-background-color: transparent;">
                <VBox fx:id="restaurantList" spacing="20" alignment="TOP_CENTER"/>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>