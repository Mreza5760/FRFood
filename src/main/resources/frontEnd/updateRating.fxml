<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.FRFood.frontEnd.controller.UpdateRatingController"
      alignment="TOP_CENTER" spacing="30"
      style="-fx-background-color: linear-gradient(to bottom, #eef3f9, #dbe5f1);">

    <padding>
        <Insets top="40" left="50" right="50" bottom="40"/>
    </padding>

    <!-- Header Bar -->
    <HBox alignment="CENTER_LEFT" spacing="10">
        <Button text="← Back"
                onAction="#handleCancel"
                style="-fx-background-color: #ff6666; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;"
                prefWidth="100"/>
        <Label text="✏️ Update Your Review"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #1e2a38;"/>
    </HBox>

    <!-- Card Container -->
    <VBox spacing="20" alignment="CENTER"
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 12;
                 -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 4);"
          maxWidth="600">

        <!-- Stars -->
        <Label text="Adjust your rating:" style="-fx-font-size: 16px; -fx-text-fill: #1e2a38;"/>
        <HBox fx:id="starBox" alignment="CENTER" spacing="10"/>

        <!-- Comment -->
        <Label text="Update your comment:" style="-fx-font-size: 16px; -fx-text-fill: #1e2a38;"/>
        <TextArea fx:id="commentArea" promptText="Edit your comment..."
                  prefRowCount="4" wrapText="true"
                  style="-fx-font-size: 14px; -fx-padding: 10; -fx-background-radius: 6;"
                  maxWidth="500"/>

        <!-- Add Images -->
        <Button text="＋ Add More Images" onAction="#handleAddImages"
                style="-fx-background-color: #00aa88; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-font-weight: bold; -fx-background-radius: 8;"
                prefWidth="180"/>

        <!-- Image Previews -->
        <FlowPane fx:id="imagePreviewPane" hgap="10" vgap="10" prefHeight="140"
                  style="-fx-background-color: #f7f9fc; -fx-padding: 10; -fx-background-radius: 8;"/>

        <!-- Action Buttons -->
        <HBox spacing="20" alignment="CENTER">
            <Button text="Cancel" onAction="#handleCancel"
                    style="-fx-background-color: #999999; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-background-radius: 8;"
                    prefWidth="120"/>
            <Button text="Update Review" onAction="#handleSubmitUpdate"
                    style="-fx-background-color: #0077cc; -fx-text-fill: white; -fx-font-size: 16px;
                           -fx-font-weight: bold; -fx-background-radius: 8;"
                    prefWidth="160"/>
        </HBox>
    </VBox>
</VBox>
