<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.FRFood.frontEnd.controller.PanelController"
      alignment="CENTER" spacing="30"
      style="-fx-background-color: linear-gradient(to bottom, #eef3f9, #dbe5f1);">

    <padding>
        <Insets top="40" right="50" bottom="40" left="50"/>
    </padding>

    <Label text="ðŸ‘¤ User Panel"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #1e2a38;"/>

    <VBox spacing="15" alignment="CENTER" maxWidth="250">

        <!-- Buyer-only -->
        <Button fx:id="orderFoodButton" text="Order Food"
                visible="false" managed="false"
                prefWidth="250" prefHeight="45"
                style="-fx-background-color: #0077cc; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; fx-cursor: hand;"/>

        <!-- Seller-only -->
        <Button fx:id="addRestaurantButton" text="Add Restaurant"
                visible="false" managed="false"
                prefWidth="250" prefHeight="45"
                style="-fx-background-color: #0077cc; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; fx-cursor: hand;"/>

        <Button fx:id="restaurantButton" text="Restaurants"
                visible="false" managed="false"
                prefWidth="250" prefHeight="45"
                style="-fx-background-color: #ff9900; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; fx-cursor: hand;"/>

        <!-- Courier-only -->
        <Button fx:id="deliveriesButton" text="Deliveries"
                visible="false" managed="false"
                prefWidth="250" prefHeight="45"
                style="-fx-background-color: #6600cc; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; fx-cursor: hand;"/>

        <!-- Common -->
        <Button fx:id="walletButton" text="Wallet"
                prefWidth="250" prefHeight="45"
                style="-fx-background-color: #00aa88; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; fx-cursor: hand;"/>

        <Button fx:id="profileButton" text="Profile"
                prefWidth="250" prefHeight="45"
                style="-fx-background-color: #555555; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; fx-cursor: hand;"/>

        <Button fx:id="logoutButton" text="Logout"
                prefWidth="250" prefHeight="45"
                style="-fx-background-color: #cc3300; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 8; fx-cursor: hand;"/>
        <Label fx:id="welcomeLabel" text="Welcome, User!"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2a3a4d;"
               alignment="CENTER"
               maxWidth="250"
               wrapText="true"/>

    </VBox>
</VBox>
